FROM mcr.microsoft.com/dotnet/aspnet:3.1 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:3.1 AS build

ARG NORCE_NUGET_USER 
ARG NORCE_NUGET_APIKEY 

ADD ./NORCE_CA.cer /usr/local/share/ca-certificates/foo.cer
RUN chmod 644 /usr/local/share/ca-certificates/foo.cer && update-ca-certificates

WORKDIR /src

COPY ["NORCE.Drilling.Trajectory.Service/NORCE.Drilling.Trajectory.Service.csproj", "NORCE.Drilling.Trajectory.Service/"]
COPY ./nuget.config .
RUN dotnet restore "NORCE.Drilling.Trajectory.Service/NORCE.Drilling.Trajectory.Service.csproj"

COPY . .
WORKDIR "/src/NORCE.Drilling.Trajectory.Service"
RUN dotnet build "NORCE.Drilling.Trajectory.Service.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "NORCE.Drilling.Trajectory.Service.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "NORCE.Drilling.Trajectory.Service.dll"]